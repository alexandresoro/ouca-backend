{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "Node16",
    "lib": ["ES2022"],
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@ou-ca/common/*": ["./src/common/*"],
      "@interfaces/*": ["./src/application/interfaces/*"],
      "@domain/*": ["./src/domain/*"],
      "@fixtures/*": ["./src/__fixtures__/*"],
      "@infrastructure/*": ["./src/infrastructure/*"]
    }
  },
  "include": ["src/**/*"]
}
